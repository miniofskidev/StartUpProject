<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#f2f2f2"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/content_row_iv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_row_title"
                    android:layout_width="match_parent"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/titleFontSize"
                    android:layout_height="wrap_content"
                    android:text="sample text" />

                <TextView
                    android:id="@+id/content_row_body"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:textSize="@dimen/bodyFontSize"
                    android:layout_height="match_parent"
                    android:text="sample sample text" />

            </LinearLayout>

            <ImageView
                android:id="@+id/content_row_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/type_one" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#0037c1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="amin news"
                android:textColor="#f2f2f2" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/idea" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>